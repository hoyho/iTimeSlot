<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="NoCloud.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:NoCloud.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="NoCloud">

    <!--  xmlns:local="clr-namespace:NoCloud" map xml namespace local to .net namespace NoCloud-->

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate views:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="Setting"
            ContentTemplate="{DataTemplate views:SettingPage}"
            Route="SettingPage" />
    </TabBar>

</Shell>
