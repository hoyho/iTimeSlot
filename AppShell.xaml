<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="iTimeSlot.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:iTimeSlot.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="iTimeSlot">

    <!--  xmlns:local="clr-namespace:iTimeSlot" map xml namespace local to .net namespace iTimeSlot-->

    <TabBar>
        <ShellContent
            Title="Slot"
            ContentTemplate="{DataTemplate views:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="General"
            ContentTemplate="{DataTemplate views:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="Me"
            ContentTemplate="{DataTemplate views:SettingPage}"
            Route="SettingPage" />
    </TabBar>

</Shell>
