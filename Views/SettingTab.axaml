<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="iTimeSlot_avalonia.Views.SettingTab">
             
    <DockPanel>
        <ScrollViewer>
            <StackPanel Margin="0">
                <TextBlock Margin="0 5">Choose a slot:</TextBlock>
                <ListBox x:Name="slots" MaxHeight="125" />
                
                <Border Background="Gainsboro">
                    <StackPanel  Orientation="Horizontal">
                        <Button>+</Button>
                        <Button>-</Button>
                    </StackPanel>
                </Border>

                <TextBlock Margin="0 5" >Behavior:</TextBlock>
                <StackPanel Margin="20">
                    <CheckBox>Close without exit</CheckBox>
                    <CheckBox IsChecked="True">Play sound when timer done</CheckBox>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</UserControl>
