<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="iTimeSlot.Views.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                Text="Current Time Slot:"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Picker x:Name="pickerCurrentTimeSlot" SemanticProperties.Description="current time slot" >
            </Picker>

            <ProgressBar x:Name="progressBar" Progress="1.0" IsVisible="false" ProgressColor="Green" HorizontalOptions="Fill"/>

            <HorizontalStackLayout Spacing="25" >
                <Button
                    x:Name="StartBtn"
                    Text="Start" 
                    SemanticProperties.Hint="Click to start"
                    Clicked="OnStartClicked"
                    HorizontalOptions="Start"
                    />

                <Button
                    x:Name="CancelBtn"
                    Text="Cancel" 
                    SemanticProperties.Hint="Click to cancel"
                    Clicked="OnCancelClicked"
                    HorizontalOptions="End"
                     />
             </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
