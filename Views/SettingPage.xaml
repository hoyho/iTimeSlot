<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:iTimeSlot.Models"
             x:Class="iTimeSlot.Views.SettingPage"
             Title="SettingPage">
    <ContentPage.BindingContext>
        <models:Setting /> <!--set the binding context to models namespace which was declared in xmlns:models="clr-namespace:iTimeSlot.Models" -->
    </ContentPage.BindingContext>
    <VerticalStackLayout>
        <Label 
            Text="Current URL:"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label Text="{Binding URL}" 
               VerticalOptions="Center" 
               HorizontalOptions="Center" />

        <Label Text="Concurrent:" />
        <Editor x:Name="ConcurrentEditor"
                Text="{Binding Concurrent}"
                HeightRequest="100" />

        <Button Text="Load"
                Clicked="Load_Clicked"/>
        <Label  HeightRequest="30" />
<!-- red button -->
        <Button Text="Save"
                Clicked="Save_Clicked" TextColor="Yellow" />
    </VerticalStackLayout>
</ContentPage>